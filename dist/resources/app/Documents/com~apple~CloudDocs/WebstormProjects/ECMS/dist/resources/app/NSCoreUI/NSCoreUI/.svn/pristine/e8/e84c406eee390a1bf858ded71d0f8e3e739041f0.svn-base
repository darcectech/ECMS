
#metrics canvas {
    border: 1px dotted red;
}

#metrics .chart-container {
    position: relative;
    margin: auto;
    height: 400px;
    width: 100%;
}

#metrics .chart-container.half{
    display: inline-block;
    width: 45%;
    vertical-align: bottom;
}

:root{
    --c : rgba(255, 20, 147, 0.21);
    --d : rgba(0, 255, 10, 0.2);
    --f : rgba(232, 255, 0, 0.2);
}